mixin icon(name,mod)
	if(mod)
		svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
			use(xlink:href="images/svg/symbol/sprite.svg#" + name)
	else
		svg(class="svg-sprite-icon icon-" + name)
			use(xlink:href="images/svg/symbol/sprite.svg#" + name)

mixin menu([...title])
	ul.menu
		each val in title
			li.menu-item
				a(href="#")= val